<%- include('../includes/header.ejs') %>
  <%- include('../includes/navigation.ejs') %>
    <section id="catalog">
      <h1>All posts</h1>
      <div class="band">
        <% if(posts) {%>
          <% for(let post of posts) {%>
            <div class="flip flip-vertical">
              <div class="front">
                <img src="<%=post.image%>" alt="post image">
                <h1 class="text-shadow">
                  Keyword: <%=post.keyword %>
                </h1>
              </div>
              <div class="back">
                <h2>
                  Title:
                  <%=post.title%>
                </h2>
                <p>
                  Description: <%=post.description%>
                </p>
                <a href="/post-details/<%=post._id%>" class="details">Details</a>
              </div>
            </div>
            <% } %>
              <% } else {%>
                <div class="no-posts">
                  <div class="no-posts-img">
                    <! /-- Do not forget to change the path to the image, and remove this comment -- />
                    <img src="./static/img/animal.jpg" alt="image_nature_3">
                  </div>
                  <p class="no-offer">There are no posts yet...</p>
                </div>
                <% } %>
      </div>
    </section>
    <%- include('../includes/footer.ejs') %>